source "https://rubygems.org"

# Bundle edge Rails instead: gem "rails", github: "rails/rails", branch: "main"
gem "rails", "~> 8.1.1"                             # Main Rails framework (API, ActiveRecord, ActionPack)

# Use postgresql as the database for Active Record
gem "pg", "~> 1.1"                                  # PostgreSQL adapter for ActiveRecord

# Use the Puma web server [https://github.com/puma/puma]
gem "puma", ">= 5.0"                                # Production web server

# Build JSON APIs with ease [https://github.com/rails/jbuilder]
# gem "jbuilder"

# Use Active Model has_secure_password
# gem "bcrypt", "~> 3.1.7"

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem "tzinfo-data", platforms: %i[windows jruby]     # Timezone data for Windows/JRuby

# Use the database-backed adapters for Rails.cache, Active Job, and Action Cable
gem "solid_cable"                                   # PostgreSQL-backed ActionCable
gem "solid_cache"                                   # PostgreSQL-backed Rails.cache
gem "solid_queue"                                   # PostgreSQL-backed background jobs

# Reduces boot times through caching; required in config/boot.rb
gem "bootsnap", require: false                      # Boot-time caching for faster startup

# Deploy this application anywhere as a Docker container [https://kamal-deploy.org]
gem "kamal", require: false                         # Simple deployment using containers

gem "httpx"

# Add HTTP asset caching/compression and X-Sendfile acceleration to Puma
gem "thruster", require: false                      # HTTP caching + compression middleware

# Use Active Storage variants
gem "image_processing", "~> 1.2"                    # Image transformations (Active Storage)

# Use Rack CORS for handling Cross-Origin Resource Sharing (CORS)
# gem "rack-cors"

gem "oj"                                            # Fast, optimized JSON parser/serializer
gem "openssl"                                       # Explicit OpenSSL dependency (fix macOS SSL issues)

group :development do
  gem "annotaterb"                                  # Auto-add schema annotations to models
end

group :development, :test do
  # Debugging Rails applications (Ruby debugger)

  gem "amazing_print", require: false

  # Audits gems for known security defects
  gem "bundler-audit", require: false               # Security audit of dependency tree

  # Static analysis for security vulnerabilities
  gem "brakeman", require: false                 # Security scanner for Rails apps

  # Omakase Ruby styling
  gem "rubocop-factory_bot", require: false
  gem "rubocop-rails-omakase", require: false       # Default Ruby/Rails linting rules (minimalistic)
  gem "rubocop-rake", require: false
  gem "rubocop-rspec", require: false

  gem "debug", platforms: %i[mri windows], require: "debug/prelude"
  gem "rspec-rails", "~> 8.0.0"                     # RSpec testing framework for Rails
end

group :test do
  gem "shoulda-matchers", "~> 7.0.1"                  # Useful matchers for testing models and controllers
end
